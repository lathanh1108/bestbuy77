header.header#header
    .wrapper.mx-auto
        .site-logo 
            a(href="/").site-link
                img(src="/images/logo.svg" alt="Site logo")
        .header-menu 
            button.btn-close-menu
                span.material-symbols-outlined close
            nav.menu
                - var menus = [ { label: __('menu.homepage'), link: '/' }, { label: __('menu.store'), link: '/store' }, { label: __('menu.user_manual'), link: '/user-manual' } ]
                each menu in menus
                    .menu-item 
                        a(href=menu.link, class=menu.class ? menu.class + 'menu-link' : 'menu-link') #{menu.label}
                .menu-item.login
                    a(href="/auth").btn.btn-sm.btn-rounded.btn-login #{__('menu.login')}
            ul.locales
                li
                    a(href="/change-lang/en")
                        img(src="/images/flag-usa.png" alt="alt")
                li
                    a(href="/change-lang/th")
                        img(src="/images/flag-thai.png" alt="alt")
        button(type="button" class="btn-open-menu") 
            span.material-symbols-outlined menu
